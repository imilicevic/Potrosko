<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.foi.air.potrosko.ChangePinActivity">


    <!-- Old pin fragment-->
    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.foi.air.potrosko.OldPinFragment"
        android:id="@+id/fragmentPin1"
        tools:layout="@layout/fragment_old_pin" />


    <!-- New pin fragment -->
    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.foi.air.potrosko.NewPinFragment"
        android:id="@+id/fragmentPin2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:layout="@layout/fragment_new_pin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" />


</RelativeLayout>